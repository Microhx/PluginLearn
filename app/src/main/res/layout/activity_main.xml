<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_tv_load"
            android:text="@string/install_plugin"
            android:onClick="loadPlugin"/>

    <Button
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/id_tv_load"
            android:text="@string/start_plugin"
            android:onClick="startActivityForPlugin"
            android:id="@+id/id_btn_start"
            android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:text="@string/uninstall_plugin"
            android:onClick="unInstall"
            app:layout_constraintTop_toBottomOf="@id/id_btn_start"
            android:layout_height="wrap_content"/>


</android.support.constraint.ConstraintLayout>